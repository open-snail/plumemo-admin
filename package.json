{
  "name": "vue-po-blog",
  "version": "0.0.2",
  "description": "前后端分离的轻量级Blog系统",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:aceHubert/po-blog.git"
  },
  "scripts": {
    "build:es": "lerna run build:es --sort --parallel",
    "build": "lerna run build --sort --stream --scope=@plumemo/*",
    "clean": "lerna clean --yes",
    "lint": "lerna run lint --parallel --stream",
    "lint:fix": "lerna run lint:fix --parallel",
    "prettier": "node ./scripts/prettier.js",
    "prettier:all": "node ./scripts/prettier.js write",
    "changelog": "node ./scripts/genChangelog.js",
    "commit": "git-cz",
    "prepublishOnly": "yarn install && yarn changelog && yarn build",
    "release:alpha": "lerna publish --canary prepatch --preid alpha --dist-tag latest --force-publish",
    "release": "lerna publish --no-git-reset"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.7.4",
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^24.9.0",
    "child_process": "^1.0.2",
    "commitizen": "^4.0.3",
    "concurrently": "^5.1.0",
    "core-js": "^3.6.5",
    "cross-env": "^6.0.3",
    "cz-lerna-changelog": "^2.0.3",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-local": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "glob-gitignore": "^1.0.14",
    "husky": ">=1",
    "jest": "^24.9.0",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.1",
    "lint-staged": ">=8",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.2",
    "util": "^0.12.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn lerna run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "workspaces": {
    "packages": [
      "packages/devtools",
      "packages/themes/*",
      "packages/plugins/*"
    ]
  }
}
